<div class="container-fluid">
<div class="row">
  
  <div class="col-xs-3 text-center">
<div class="list">
<h2 > Family </h2>
<p>
<% @user.contacts.each do |c| %>
     <% if c.group == "family" %>
    
	<div class="contact">
	<%= c.name %> 
	
	<% if c.importance==true %>
	<%= image_tag("star_gold.png", :width => 25, :height => 25) %> 
	<% else %>
	<%= image_tag("star_white.png", :width => 25, :height => 25) %>
	<% end %>
	</br>
	<span class="glyphicon glyphicon-envelope"></span> 
<%= c.email%> 
<span class="glyphicon glyphicon-earphone"></span>
    <%= c.phone %> 
	</br>
	
	<%= link_to 'Edit', edit_user_contact_path(@user, c) %> 
    
	<%= link_to 'Delete', 
	     user_contact_path(@user, c), 
		 method: :delete, 
		 data: { confirm: 'Are you sure?' }   %> 
		 </div>
<% end %>

	
<% end %>
</p>

